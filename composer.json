{
    "name": "mf/callback-parser",
    "version": "2.0.0",
    "description": "PHP parser for arrow functions",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Petr Chromec",
            "email": "mortal_flesh@seznam.cz"
        }
    ],
    "autoload": {
        "psr-4": {
            "MF\\Parser\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MF\\Parser\\": "tests"
        },
        "files": [
            "tests/Fixtures/functions.php"
        ]
    },
    "require": {
        "php": "^7.1",
        "beberlei/assert": "^2.7"
    },
    "require-dev": {
        "lmc/coding-standard": "^1.1",
        "phpstan/phpstan-shim": "^0.9",
        "phpunit/phpunit": "^7.0",
        "satooshi/php-coveralls": "^1.0"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "all": [
            "@analyze", "@tests-ci"
        ],
        "analyze": [
            "bin/ecs check -vvv --ansi src/ tests/",
            "bin/phpstan analyze ./src ./tests -c phpstan.neon --ansi --level 7"
        ],
        "tests": "bin/phpunit",
        "tests-ci": "mkdir -p code-coverage && php -dxdebug.coverage_enable=1 bin/phpunit -c phpunit.xml.dist",
        "fix": [
            "bin/ecs check -vvv --ansi --clear-cache --fix src/ tests/"
        ]
    }
}
